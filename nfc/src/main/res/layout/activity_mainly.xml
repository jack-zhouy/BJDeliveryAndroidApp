            <!--android:text="更多"-->
            <!--android:textColor="@color/textgray"-->
            <!--android:textSize="12sp" />-->
            <!--</LinearLayout>-->


        </LinearLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:visibility="gone" />
    </LinearLayout>

</TabHost>